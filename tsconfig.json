{
  "compilerOptions": {
    "target": "ES6",
    "isolatedModules": true,
    "module": "CommonJS",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
        "types/*": ["types/*"],
        "js/*": ["ts/*"],
        "adapters/*": ["ts/adapters/*"],
        "classes/*": ["ts/classes/*"],
        "controllers/*": ["ts/controllers/*"],
        "mappers/*": ["ts/mappers/*"],
        "models/*": ["ts/models/*"],
        "views/*": ["ts/views/*"]
    },
  }
}
